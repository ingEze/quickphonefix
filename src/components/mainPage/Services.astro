---
import wrench from 'lucide-static/icons/wrench.svg?raw'
import zap from 'lucide-static/icons/zap.svg?raw'
import phone from 'lucide-static/icons/phone.svg?raw'

const services = [
  { icon: 'wrench', title: 'Reparación de Pantallas', brands: 'Todas las marcas' },
  { icon: 'zap', title: 'Cambio de Baterías', brands: 'Originales y compatibles' },
  { icon: 'phone', title: 'Desbloqueo', brands: 'Software y hardware' }
]
---

<section id="services" class="py-20 px-4 relative">
  <div class="max-w-7xl mx-auto">

    <h2 class="text-4xl md:text-5xl font-black text-center mb-4 bg-linear-to-r from-blue-400 to-purple-400 bg-clip-text">
      Nuestros Servicios
    </h2>

    <p class="text-center text-slate-400 mb-16 text-lg">
      Soluciones profesionales para cada problema
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="bg-slate-900 border border-slate-800 rounded-xl p-6 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 group">

          <div class="w-16 h-16 bg-linear-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            {service.icon === 'wrench' && <div class="w-6 h-6 text-white" set:html={wrench} />}
            {service.icon === 'zap' && <div class="w-6 h-6 text-white" set:html={zap} />}
            {service.icon === 'phone' && <div class="w-6 h-6 text-white" set:html={phone} />}
          </div>

          <h3 class="text-xl font-bold mb-2">{service.title}</h3>
          <p class="text-slate-400">{service.brands}</p>
        </div>
      ))}
    </div>

  </div>
</section>
