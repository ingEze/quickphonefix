---
import '../styles/global.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Reparación de celulares rápida y confiable. Especialistas en iPhone, Samsung, Xiaomi y más. Garantía en todos nuestros servicios." />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Favicon general -->
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="shortcut icon" href="/favicon/favicon.ico" type="image/x-icon">
		<!-- Apple / iOS -->
		<link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png">
		<!-- Android / Chrome -->
		<link rel="manifest" href="/favicon/site.webmanifest">

    <link 
      rel="preload" 
      as="image" 
      href="/logo/logo.webp"
      type="image/webp"
    />
    
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Reparación de celulares rápida y confiable" />
    <meta property="og:image" content="/logo/logo.webp" />
    
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Reparación de celulares rápida y confiable" />
    <meta name="twitter:image" content="/logo/logo.webp" />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>